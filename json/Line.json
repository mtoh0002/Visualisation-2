{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Vechicular Fatalities per State from 1989 to 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/mtoh0002/Visualisation-2/master/data/Dataset.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Northern Territory",
          "Tasmania",
          "Queensland",
          "South Australia",
          "New South Wales",
          "Victoria",
          "Australian Capital Territory"
        ],
        "labels": [
          "Show All",
          "Northern Territory",
          "Tasmania",
          "Queensland",
          "South Australia",
          "New South Wales",
          "Victoria",
          "Australian Capital Territory"
        ],
        "name": "State: "
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum.Fatality/datum.Population * 10000",
      "as": "Fatalities per 10,000 population"
    },
    {"filter": "datum.State"},
    {"filter": "State_selection == null || datum.State == State_selection"}
  ],
  "selection": {
    "State_highlight": {"type": "multi", "fields": ["State"], "bind": "legend"}
  },
  "mark": {"type":"line",
           "point":true},
  "encoding": {
    "x": {"field": "Year", "type": "temporal"},
    "y": {
      "field": "Fatalities per 10,000 population",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "point"}
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "scale": {
        "domain": [
          "Northern Territory",
          "Tasmania",
          "Queensland",
          "South Australia",
          "New South Wales",
          "Victoria",
          "Australian Capital Territory"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628",
          "#4a7d3e"
        ]
      }
    },
    "opacity": {
      "condition": {"selection": "State_highlight", "value": 0.6},
      "value": 0.2
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {
        "field": "Fatalities per 10,000 population",
        "type": "quantitative",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}
