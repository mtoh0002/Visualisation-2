{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/mtoh0002/Visualisation-2/master/json/aus_states.topojson",
    "format": {"type": "topojson", "feature": "STE11aAust"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 1989,
      "bind": {
        "input": "range",
        "min": 1989,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }],
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mtoh0002/Visualisation-2/master/data/Fatality_data.csv"
        },
        "key": "State",
        "fields":["Year", "Fatality", "Population"]
      }
    },
    {
      "calculate": "datum.Fatality/datum.Population * 10000",
      "as": "Fatalities per 10,000 population"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Fatalities per 10,000 population",
      "type": "quantitative",
      "legend": {"orient":"bottom-left","titleOrient":"left"}
    },
    "tooltip": [
      {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
      {"field": "Fatalities per 10,000 population", "type": "quantitative", "format":".2f"},
      {"field": "Year", "type": "quantitative"}
    ]
  },
  "config": {
    "style": {
    "cell": {
      "stroke": "transparent"}}
}
}
