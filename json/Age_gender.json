{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mtoh0002/Visualisation-2/master/data/Dataset.csv"
  },
  "title":"Age and gender of Fatalities",
  "spacing": 0,
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1989,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Northern Territory",
          "Tasmania",
          "Queensland",
          "South Australia",
          "New South Wales",
          "Victoria",
          "Australian Capital Territory"
        ],
        "labels": [
          "Show All",
          "Northern Territory",
          "Tasmania",
          "Queensland",
          "South Australia",
          "New South Wales",
          "Victoria",
          "Australian Capital Territory"
        ],
        "name": "State:"
      }
    }
  ],
  "hconcat": [
    {
      "transform": [{"filter": {"field": "Gender", "equal": "Female"}}],
      "title": "Female",
      "mark": "bar",
      "height": 200,
      "width":500,
      "encoding": {
        "y": {
          "field": "Age_Group",
          "type": "ordinal",
          "axis": null,
          "sort": "descending"
        },
        "x": {
          "aggregate": "sum",
          "field": "Fatality",
          "title": "Fatalities",
          "sort": "descending"
        },
        "color": {
          "field": "Gender",
          "scale": {"range": ["#AA4499","#999933"]},
          "legend": null
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal"},
          {"field": "Age_Group", "type": "nominal"},
          {
            "aggregate": "sum",
            "field": "Fatality",
            "type": "quantitative",
            "format": "f",
            "title": "Fatalities"
          }
        ]
      }
    },
    {
      "width": 100,
      "height":200,
      "view": {"stroke": null},
      "mark": {"type": "text", "align": "center"},
      "encoding": {
        "y": {
          "field": "Age_Group",
          "type": "ordinal",
          "axis": null,
          "sort": "descending"
        },
        "text": {"field": "Age_Group"}
      }
    },
    {
      "transform": [{"filter": {"field": "Gender", "equal": "Male"}}],
      "title": "Male",
      "height": 200,
      "width":500,     
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Age_Group",
          "title": null,
          "axis": null,
          "sort": "descending"
        },
        "x": {
          "aggregate": "sum",
          "field": "Fatality",
          "title": "Fatalities"
        },
        "color": {"field": "Gender", "legend": null},
        "tooltip": [
          {"field": "Gender", "type": "nominal"},
          {"field": "Age_Group", "type": "nominal"},
          {
            "aggregate": "sum",
            "field": "Fatality",
            "type": "quantitative",
            "format": ",",
            "title": "Fatalities"
          }
        ]
      }
    }
  ],
    "transform": [
    {"filter": "datum.Age_Group != 'Unknown'"},
    {"filter": "State_selection == null || datum.State == State_selection"},
    {"filter": "Year == datum.Year"}
  ],
  "config": {"view": {"stroke": null},
  "axis": {"grid": false,"labelFontSize":11,"titleFontSize":13,"tickMinStep":1},
  "mark":{"fontSize":14},
  "title":{"align": "center","anchor":"middle","fontSize":14},
  "legend": {"labelFontWeight": "bold"}}
}
